@model IEnumerable<POSWeb.get_OrdersListForIndex_Result>

@{
    ViewBag.Title = "Index";
    //Layout = "~/Views/Shared/_Layout.cshtml";
    Layout = "~/Views/Shared/_LayoutTable.cshtml";
}

@*<h2>Index</h2>

    <p>
        @Html.ActionLink("Create New", "Create")
    </p>*@
<div id="main-wrapper">
    <div class="row">
        <div class="col-md-12">
            <div class="panel panel-white">
                <div class="panel-heading clearfix">
                    <h4 class="panel-title">Orders</h4>
                </div>

                <div class="clearfix cl"></div>


                <div class="panel-body">
                    <div class="table-responsive">
                        <table id="report" class="display table" style="width: 100%; cellspacing: 0;">
                            <thead>
                                <tr>
                                    <th>
                                        @*@Html.DisplayNameFor(model => model.orderid)*@
                                        Order Id
                                    </th>
                                    <th>
                                        @*@Html.DisplayNameFor(model => model.CustomerName)*@
                                        Customer
                                    </th>
                                    <th>
                                        @*@Html.DisplayNameFor(model => model.storename)*@
                                        Store
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.total)
                                    </th>
                                    <th>
                                        @*@Html.DisplayNameFor(model => model.ordertype)*@
                                        Order Type
                                    </th>
                                    <th>
                                        @*@Html.DisplayNameFor(model => model.createddatetime)*@
                                        Order Time
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.status)
                                    </th>

                                    <th></th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.orderid)
                                        </td>
                                        <td ondblclick="goToEdit(@item.CustomerID)">
                                            @Html.DisplayFor(modelItem => item.CustomerName)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.storename)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.total)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.ordertype)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.createddatetime)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.status)
                                        </td>

                                        <td>
                                            @Html.ActionLink("Edit", "Edit", new { id = item.orderid }) |
                                            @Html.ActionLink("Details", "Details", new { id = item.orderid }) |
                                            @Html.ActionLink("Delete", "Delete", new { id = item.orderid })
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>

        </div>
    </div>
</div>

<script>
  function goToEdit(s) {

        location.href = "@Url.Action("Stores", "Details", new {id= "cid" })".replace("cid",s.toString());
    }

</script>